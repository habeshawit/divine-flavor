
<h1><%=@recipe.name%></h1>
<h6>Ingredients:</h6>
<%@recipe.ingredients.split("\r\n").each do |ingredient|%>
    <%= ingredient%><br>
<%end%><br>

<h6>Instructions:</h6>
<%@recipe.instructions.split("\r\n").each do |step|%>
    <%= step%><br>
<%end%><br>


<% if @recipe.user_id == current_user.id%>
    <%= link_to "Edit Recipe", edit_recipe_path%> |
    <%= link_to "Delete", recipe_path(@recipe), method: :delete, data: {confirm: "Are you sure you want to delete #{@recipe.name}?" } %>
<% end %><br>

<%= link_to "See all comments", recipe_comments_path(@recipe)%><br><br>

<%= render '/comments/form' %>


<%if !@recipe.comments.empty?%>
    <% @comments.each do |comment|%>
       <br> <%= comment.user.name%> says: <%= comment.content%>      
    <%end%>
<%end%>
