<h1>My Recipes</h1>
<div class="container">
<p> <%= link_to "Add a recipe", new_recipe_path %> |
 <%= link_to "Back to all recipe", recipes_path %> <p>

<%if current_user.recipes.empty?%>
<%= "You haven't added any recipes yet. Add a recipe to begin!"%>
<%else%>
    <div class='search-area'>
        <h3>Search your recipes</h3>
        <%=form_tag '/my_recipes', method: :get do%>
            <div class="form-group row">
                <div class ="col-sm-9 no-right-padding" >
                    <%= text_field_tag :recipe, params[:recipe], placeholder: "Enter a recipe name or ingredient", autofocus:true, class: "form-control form-control-lg"%>
                </div>

                <div class="col-sm-3 no-left-padding" >
                    <%= button_tag type: :submit, class: "btn btn-success" do%>
                        <%= fa_icon 'search 2x' %>
                    <%end%>
                </div>
            </div>
        <%end%>
    </div>

  <%= render '/recipes/home'%>


<%end%>
</div>


