<h1>Users#my_recipes</h1>

<p> <%= link_to "Add a recipe", new_recipe_path %> |
 <%= link_to "Back to all recipe", recipes_path %> <p>

<%if current_user.recipes.empty?%>
<%= "You do not have any recipes yet. Add a recipe to begin!"%>
<%else%>
    <div class='search-area'>
        <h3>Search your recipes</h3>
        <%=form_tag '/my_recipes', method: :get do%>
            <div class="form-group row">
                <div class ="col-sm-9 no-right-padding" >
                    <%= text_field_tag :recipe, params[:recipe], placeholder: "Enter a recipe name or ingredient", autofocus:true, class: "form-control form-control-lg"%>
                </div>

                <div class="col-sm-3 no-left-padding" >
                    <%= button_tag type: :submit, class: "btn btn-success" do%>
                        <%= fa_icon 'search 2x' %>
                    <%end%>
                </div>
            </div>
        <%end%>
    </div>

    <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Recipe Name</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
  <%@recipes.each do |recipe|%>
    <tr>
      <td><%= link_to recipe.name, recipe_path(recipe)%></td>
      <td><%= link_to "Edit", edit_recipe_path(recipe)%></td>
      <td><%= link_to "Delete", recipe_path(recipe), method: :delete, data: {confirm: "Are you sure you want to delete #{recipe.name}?" }%></td>
    </tr>
    <%end%>
  </tbody>
</table>

<%end%>


