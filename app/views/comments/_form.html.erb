<div class="container">
<%= form_for ([@recipe, @comment]) do |f| %>
    <div class="field <%= 'field_with_errors' if @comment.errors[:content].any? %>">
        <%= f.text_field :content, class: "commentBox", style: "width: 65%", placeholder:"add a comment" %>
        <%= f.submit "Post Comment"%>
    </div>
<% end %>
</div>

